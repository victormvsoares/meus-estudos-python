from datetime import date

atual = date.today().year

print('---ALISTAMENTO MILITAR---')

nascimento = int(input('digite o ano se nascimento: '))

idade = atual - nascimento

if idade < 18:
    print(f'O individua tem {idade} anos e se alistara em {(18 - idade)} anos')

elif idade > 18:
    print(f'o individuo tem {idade} anos e se alistou a {idade - 18} anos')

else:
    print(f'O individuo tem {idade} deve se alista IMEDIATAMENTE')
